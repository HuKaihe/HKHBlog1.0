</footer>
<script src="/public/javascripts/index.min.js"></script>
<script>

    (function(){
        if(document.body.clientWidth<500||document.documentElement.clientWidth<500){
            $('.logoff_btn').html('<span class="fa fa-sign-out icon"></span>');
            $('.login_btn').html('<span class="fa fa-sign-in icon"></span>');
            $('.about-me_btn').html('<span class="fa fa-vcard icon"></span>');
            var $head = $('.header-nav'),
                    $show = $('.show-nav');
            $head.hide();
            $show.show().click(function () {
                $head.slideToggle(500);
                $show.toggleClass('active');
            });
        }else{
            $('.show-nav').remove();
        }
    }());
</script>
</body>
</html>
